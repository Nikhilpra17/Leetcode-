class Solution {
    public int coinChange(int[] coins, int amount) {
        
        if (amount < 1){
            return 0;
        }
        
        return coinChange( coins, amount , new int[amount +1]);
    }
    
    private int coinChange(int [] coins, int remainder , int dp[]){
        if (remainder <0){
            return -1;
        }
        
        if (remainder == 0){
            return 0;
        }
        
        if (dp[remainder] != 0){
            return dp[remainder];
        }
        
        int minimum = Integer.MAX_VALUE;
