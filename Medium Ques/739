class Solution {
    public int[] dailyTemperatures(int[] temperatures) {
        
        // Concept of Monotonus Stacks(Fav topic of GOOGLE)
        
        
        int len = temperatures.length;
        int [] ans =new int[len];
        
        Stack<Integer> s = new Stack<>();
        
        for (int i = 0 ; i< len ; i++){
            while (!s.isEmpty() && temperatures[s.peek()] < temperatures[i]){
                ans[s.peek()] = i - s.peek();
                s.pop();
                
            }
            s.push(i);
            
        }
        
        return ans;
        
    }
}



